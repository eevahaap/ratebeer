<p id="notice"><%= notice %></p>

<p>
  <strong><%= @user.username %></strong>
</p>

<p>
  has made <%= @user.ratings.count %> ratings, average <%= @user.ratings.average(:score) %>


</p>

<p>
  <strong>ratings: </strong>
<ul>
  <% @user.ratings.each do |rating| %>
      <li>
        <%= rating %>
        <% if @user == current_user %>
            <%= link_to 'delete', rating, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure?' } %>
        <% end %>
      </li>
  <% end %>
</ul>
favorite style:
 <%= @user.favorite_style%> <br>
favorite brewery:
<%= @user.favorite_brewery%>

</p>

<p>
  <% unless @user.beer_clubs.nil? %>
      member of:

      <% @user.beer_clubs.each do |beer_club| %>
          <%= link_to beer_club.name, beer_club %>
      <% end %>

  <% end %>
</p>

<%= link_to 'Edit', edit_user_path(@user), class:'btn btn-primary' %> |
<%= link_to 'Destroy', user_path, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure?' } %> |
<%= link_to 'Back', users_path %>
